<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/app_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/bookDetailTitle"/>

            <ImageView
                android:layout_width="196dp"
                android:layout_height="200dp"
                android:id="@+id/bookDetailCover"
                android:layout_below="@id/bookDetailTitle"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookDetailISBN"
                android:layout_below="@id/bookDetailCover"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookDetailPrice"
                android:layout_below="@id/bookDetailISBN"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookDetailPrice"
                android:layout_alignParentEnd="true"
                android:id="@+id/bookDetailButton"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>